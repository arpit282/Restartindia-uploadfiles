<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://bootswatch.com/4/slate/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <title>Uploader</title>
</head>
<body>


    <div class="container w-50 mt-5">
        <h1 class="display-4 text-center mb-5" ><i class="fas fa-cloud-upload-alt"></i>   Upload Images  </h1>
        <%= typeof msg != 'undefined' ? msg : '' %>
        <form action="/uploadsingle" method ="POST"  enctype="multipart/form-data">
           

           
                <div class="file-field input-field">
                  <div class="btn btn-warning">
                    <span>Choose</span>
                    <input name="single" class="text-light" type="file">
                  </div>
                  <div class="file-path-wrapper">
                    <input class="file-path validate text-center text-light" type="text">
                  </div>
                </div>

               

            <!-- <input type="file" name="single" class="custom-file-input" id="inputGroupFile01" > -->
            <input type="submit"  class="btn btn-success text-center w-100 mt-5"  value="Upload"> 
        </form>
    
        <br><br>

        <form>
          <% images.forEach(img =>{ %>
          <div class="file-field input-field">
           
            <div class="btn btn-danger mr-3 " style=" margin: 10px;">
              <a class="text-white" style="text-decoration: none;" href="/uploads">  <span>Download</span> </a>      
            </div>
            <div class="file-path-wrapper">
              <%= img.imgurl%>
              <input class="file-path validate text-center text-light" type="text">
            </div>
          </div>
             <% }) %>
        </form>
        
    </div>





    <div class="copy-right-text text-center m-5">Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved | This is made with <i class="fa fa-exclamation-circle "></i> by <a href="#" style="margin: 0;" target="_blank"> Arpit Singh</a></div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>